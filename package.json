{
  "name": "donation-tracker",
  "version": "1.0.0",
  "description": "Non-profit donation tracker API",
  "homepage": "https://github.com/Vickouma77/donation-tracker#readme",
  "bugs": {
    "url": "https://github.com/Vickouma77/donation-tracker/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vickouma77/donation-tracker.git"
  },
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "lint": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:watch": "npm run test -- --watch",
    "clean": "rm -rf dist logs",
    "prebuild": "npm run clean",
    "seed": "tsx src/scripts/seed.ts",
    "seed:dev": "SEED_DATABASE=true tsx watch src/index.ts",
    "docker:build": "docker build -t donation-tracker .",
    "docker:run": "docker run -p 4000:4000 -e MONGODB_URI=mongodb://host.docker.internal:27017/donation-tracker donation-tracker"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "helmet": "^7.1.0",
    "mongoose": "^8.5.3",
    "uuid": "^9.0.1",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.11",
    "@types/uuid": "^9.0.8",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.3.3"
  }
}
